<div class="booyah-box col-xs-10 col-xs-offset-1">



<h1><%=  @place.name  %></h1>
<em><%=  @place.address %></em>
<br /> <br />
<p><%= @place.description %></p>

<%  if @place.latitude.present?  && @place.longitude.present?  %>

<script>
function initMap() {
  var myLatLng = {lat:  <%=  @place.latitude  %> , lng:   <%=  @place.longitude  %> };
  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 12,
    center: myLatLng
  });
  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Hello World!'
  });
}
</script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?signed_in=true&callback=initMap">
        </script>

<div id="map"></div>
<% end %>

<br />

<button class="glyphicon glyphicon-camera pull-right" data-toggle="modal" data-target="#mypicModal">
  </button>
<div class="pull-right">
  <% if current_user && current_user == @place.user %>

    <%= link_to 'Edit', edit_place_path(@place), class:  'btn btn-primary'  %>
    <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>

   <% end %>
    </div>
</div>



<!-- Modal for Comments -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>

      </div>

     <%= simple_form_for @comment, url: place_comments_path(@place) do | f | %>
      <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class-"col-xs-10 col-xs-offset-1">
<h1 class="pull-left">Comments</h1>
<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg cmt-btn pull-right" data-toggle="modal" data-target="#myModal">
  Add a comment
</button>

</div>



<!-- Modal for Picture -->
<div class="modal fade" id="mypicModal" tabindex="-1" role="dialog" aria-labelledby="picModalLabel" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">

      </div>
       <%= simple_form_for @photo, url: place_photos_path(@place) do | f | %>
      <div class="modal-body">
          <%= f.input :picture %>
          <%= f.input :caption %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Add a picture", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="clear"></div>

<div class = "container">
  <div class = "row well well-lg">
    <div class="col-md-6 col-xs-4">
    <% if @place.photos.present? %>
      <%= image_tag(@place.photos.last.picture, :class => "img-thumbnail")%>

    </div>
<% end %>
<br /> <br />
   <div class="col-md-6 col-xs-4 pull right">
   <% @place.comments.each do | comment | %>
    <blockquote>
      <% if comment.humanized_rating.present? %>
      <b><%= comment.rating %></b> -
       <% end %>
        <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
</div>
  </div>
  <% end %>







